<h1>PostsIndex</h1>
<p>
    <% @posts.each do |post| %>
    <div class="card">
        <div class="card-content">
            <div class="media">
                <div class="media-content">
                    <p class="title is-4"><%= link_to post.title, post  %></p>
                </div>
            </div>
            <div class="content">
                <%= post.content %>
            </div>
            <div class="comment-count">
                <% if post.comments.empty? %>
                <p> NO Comments! </p>
                <% else %>
                <span class="tag is-rounded"><%= post.comments.count %> comments</span>
                <% end %>
            </div>
        </div>
    </div>
    <% end %>
</p>